# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,rst,ini}]
indent_style = space
indent_size = 4

[*.py]
max_line_length = 79
multi_line_output = 3
default_section = THIRDPARTY
recursive = true
include_trailing_comma = true
force_grid_wrap = 0
use_parentheses = true

[*.{html,css,scss,json,yml,ts,js}]
indent_style = space
indent_size = 2
charset = utf-8
quote_type = single
max_line_length = 100

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4

[nginx.conf]
indent_style = space
indent_size = 2
